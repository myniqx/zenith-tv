{
	"name": "zenith-tv",
	"version": "0.1.0",
	"private": true,
	"description": "Modern cross-platform IPTV player with peer-to-peer remote control",
	"repository": {
		"type": "git",
		"url": "https://github.com/myniqx/zenith-tv.git"
	},
	"author": "myniqx",
	"license": "MIT",
	"scripts": {
		"dev:desktop": "pnpm --filter @zenith-tv/desktop dev",
		"build:parser": "cd core/parser && wasm-pack build --target web --release",
		"build:desktop": "pnpm --filter @zenith-tv/desktop build",
		"build:electron": "pnpm --filter @zenith-tv/desktop build:electron",
		"build:all": "pnpm build:parser && pnpm build:desktop",
		"clean": "pnpm -r exec rm -rf node_modules dist build .turbo",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
		"lint:check": "eslint \"**/*.{ts,tsx,js,jsx}\"",
		"type-check": "pnpm -r exec tsc --noEmit",
		"type-check:desktop": "pnpm --filter @zenith-tv/desktop type-check"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^20.11.0",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"eslint": "^9.39.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@10.21.0"
}
